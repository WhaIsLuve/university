<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:System="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Title="Система управления кинотеатром" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Шапка приложения -->
        <Border Grid.Row="0" Background="#FF1E1E1E" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="/Resources/cinema-icon.png" Width="32" Height="32" Margin="0,0,10,0"/>
                <TextBlock Text="Cinema Management System" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Меню навигации -->
            <Border Grid.Column="0" Background="#FF333333">
                <StackPanel>
                    <Button x:Name="btnMovies" Content="Фильмы" Style="{StaticResource MenuButtonStyle}" Tag="MoviesView"/>
                    <Button x:Name="btnSessions" Content="Сеансы" Style="{StaticResource MenuButtonStyle}" Tag="SessionsView"/>
                    <Button x:Name="btnHalls" Content="Залы" Style="{StaticResource MenuButtonStyle}" Tag="HallsView"/>
                    <Button x:Name="btnTickets" Content="Билеты" Style="{StaticResource MenuButtonStyle}" Tag="TicketsView"/>
                    <Button x:Name="btnEmployees" Content="Сотрудники" Style="{StaticResource MenuButtonStyle}" Tag="EmployeesView"/>
                    <Button x:Name="btnReports" Content="Отчеты" Style="{StaticResource MenuButtonStyle}" Tag="ReportsView"/>
                    <Button x:Name="btnSettings" Content="Настройки" Style="{StaticResource MenuButtonStyle}" Tag="SettingsView"/>
                    
                    <Separator Margin="5" Background="#FF555555"/>
                    
                    <Button x:Name="btnLogout" Content="Выйти" 
                            Style="{StaticResource MenuButtonStyle}"
                            Foreground="#FFFF6B6B"
                            Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Контентная область -->
            <Border Grid.Column="1" Background="#FFEEEEEE">
                <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
        
        <!-- Подвал -->
        <Border Grid.Row="2" Background="#FF1E1E1E" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Текущий пользователь: " Foreground="White"/>
                <TextBlock x:Name="tbCurrentUser" Text="Иванов И.И. (Администратор)" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text=" | " Foreground="White" Margin="10,0"/>
                <TextBlock Text="Дата: " Foreground="White"/>
                <TextBlock x:Name="tbCurrentDate" Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='dd.MM.yyyy HH:mm'}" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>